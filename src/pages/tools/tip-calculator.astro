---
import Layout from '../../layouts/Layout.astro';

const title = "Tip Calculator";

let billAmount = "";
let tipPercentage = "";
let totalWithTip = null;

if (
  Astro.request?.method === 'POST' &&
  Astro.request.headers.get('content-type')?.includes('application/x-www-form-urlencoded')
) {
  const form = await Astro.request.formData();
  billAmount = form.get('billAmount') || "";
  tipPercentage = form.get('tipPercentage') || "";

  const bill = parseFloat(billAmount);
  const tip = parseFloat(tipPercentage);

  if (!isNaN(bill) && !isNaN(tip)) {
    const tipAmount = bill * (tip / 100);
    totalWithTip = bill + tipAmount;
  }
}
