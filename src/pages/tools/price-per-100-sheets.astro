---
import Layout from '../../layouts/Layout.astro';

const title = "Price Per 100 Sheets Calculator";

let totalCost = "";
let totalSheets = "";
let pricePer100 = null;

// âœ… Server-side POST form handling
if (
  Astro.request?.method === 'POST' &&
  Astro.request.headers.get('content-type')?.includes('application/x-www-form-urlencoded')
) {
  const form = await Astro.request.formData();

  totalCost = form.get('totalCost') || "";
  totalSheets = form.get('totalSheets') || "";

  const cost = parseFloat(totalCost);
  const sheets = parseFloat(totalSheets);

  if (!isNaN(cost) && !isNaN(sheets) && sheets > 0) {
    pricePer100 = (cost / sheets) * 100;
  }
}
---

<Layout>
  <!-- ðŸ“„ Header -->
  <section class="max-w-3xl mx-auto bg-gradient-to-r from-blue-600 to-blue-800 text-white py-6 px-4 md:py-8 mb-8 shadow text-center rounded-md">
    <h1 class="text-3xl font-bold mb-2">ðŸ“„ {title}</h1>
    <p class="text-base">Find the cost per 100 sheets for paper products like napkins, tissues, or paper towels.</p>
  </section>

  <!-- ðŸ’¡ Tip -->
  <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6 max-w-3xl mx-auto">
    <p class="text-blue-700"><strong>ðŸ’¡ Tip:</strong> Great for comparing napkins, tissues, notebooks, or toilet paper brands.</p>
  </div>

  <!-- ðŸ”¢ Form -->
  <section class="bg-white border border-gray-200 p-6 rounded-lg shadow max-w-2xl mx-auto mb-10">
    <form method="POST" enctype="application/x-www-form-urlencoded" class="space-y-6">
      <div>
        <label for="totalCost" class="block font-medium text-gray-800">Total Cost ($):</label>
        <input
          type="number"
          step="any"
          name="totalCost"
          id="totalCost"
          class="w-full p-2 border rounded"
          value={totalCost}
          required
        />
      </div>

      <div>
        <label for="totalSheets" class="block font-medium text-gray-800">Total Sheets:</label>
        <input
          type="number"
          step="any"
          name="totalSheets"
          id="totalSheets"
          class="w-full p-2 border rounded"
          value={totalSheets}
          required
        />
      </div>

      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded font-semibold w-full">
        Calculate Price Per 100 Sheets
      </button>
    </form>

    {pricePer100 !== null && (
      <div class="mt-6 bg-green-50 border border-green-300 text-green-800 font-semibold p-4 rounded text-center">
        Price Per 100 Sheets: ${pricePer100.toFixed(2)}
      </div>
    )}
  </section>

  <!-- ðŸ“˜ Why This Matters + Pro Tips -->
  <section class="max-w-3xl mx-auto px-6 mt-6 mb-8">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Why This Matters</h2>
    <p class="text-gray-700 mb-4">
      Some brands use sneaky packaging â€” smaller rolls or fewer sheets can hide higher prices. Price per 100 sheets lets you compare apples to apples.
    </p>

    <h3 class="text-lg font-semibold mb-2 text-gray-800">Pro Tips</h3>
    <ul class="list-disc list-inside text-gray-700 space-y-1">
      <li>Always check sheet count, not just roll or pack count.</li>
      <li>Use for tissues, napkins, notebooks, and even paper plates.</li>
      <li>Buy in bulk only if price per 100 is actually lower â€” check with this tool!</li>
    </ul>
  </section>
</Layout>


