---
import LoanModule from '../../components/LoanModule.jsx';
import Layout from '../../layouts/Layout.astro';

const pageTitle = 'ðŸ’° All-in-One Loan Calculator Suite';
const pageDesc = 'Compare amortized, interest-only, deferred, and balloon loan repayment options with interactive charts and amortization schedules.';
---

<Layout title={pageTitle} description={pageDesc}>
  <section class="max-w-4xl mx-auto px-4 py-10">
    <h1 class="text-4xl font-bold mb-4 text-center">{pageTitle}</h1>
    <p class="text-center mb-10 text-gray-700">
      Compare loan repayment options for <strong>Amortized</strong>, <strong>Interest-Only</strong>, <strong>Deferred Payment</strong>, and <strong>Balloon Loans</strong>. Each module includes charts, tables, and downloadable amortization schedules.
    </p>

    <!-- âœ… Render each loan type with hydration -->
    <LoanModule type="amortized" client:load />
    <LoanModule type="interest-only" client:load />
    <LoanModule type="deferred" client:load />
    <LoanModule type="balloon" client:load />
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toggles = document.querySelectorAll('[data-toggle]');

      toggles.forEach(btn => {
        btn.addEventListener('click', () => {
          const target = document.getElementById(btn.dataset.toggle);
          if (target) {
            const expanded = btn.getAttribute('aria-expanded') === 'true';
            btn.setAttribute('aria-expanded', !expanded);
            target.classList.toggle('hidden');
          }
        });
      });
    });
  </script>
</Layout>




