---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <section class="max-w-xl mx-auto mt-10 p-6 bg-white shadow rounded-lg">
    <h1 class="text-2xl font-bold mb-4">Temperature Converter</h1>
    <p class="text-gray-600 mb-6">
      Convert between Celsius and Fahrenheit in one click. Simple and fast!
    </p>

    <form class="space-y-4">
      <div>
        <label class="block font-medium text-gray-700">Enter Temperature:</label>
        <input id="tempInput" type="number" step="0.1" class="w-full border rounded p-2" required />
      </div>

      <div>
        <label class="block font-medium text-gray-700">Convert From:</label>
        <select id="scale" class="w-full border rounded p-2">
          <option value="c">Celsius</option>
          <option value="f">Fahrenheit</option>
        </select>
      </div>

      <button type="button" onclick="convertTemp()" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
        Convert
      </button>
    </form>

    <div id="tempResult" class="mt-6 text-lg font-semibold text-green-700 hidden"></div>
  </section>

  <script is:inline>
    function convertTemp() {
      const temp = parseFloat(document.getElementById("tempInput").value);
      const scale = document.getElementById("scale").value;
      const resultDiv = document.getElementById("tempResult");

      if (isNaN(temp)) {
        resultDiv.innerText = "Please enter a valid number.";
        resultDiv.classList.remove("hidden");
        return;
      }

      let result = 0;
      let label = "";

      if (scale === "c") {
        result = (temp * 9/5) + 32;
        label = `${temp}째C is ${result.toFixed(1)}째F`;
      } else {
        result = (temp - 32) * 5/9;
        label = `${temp}째F is ${result.toFixed(1)}째C`;
      }

      resultDiv.innerText = label;
      resultDiv.classList.remove("hidden");
    }
  </script>
</Layout>
