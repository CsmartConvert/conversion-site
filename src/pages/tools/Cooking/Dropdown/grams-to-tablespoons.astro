    <!-- JS Logic -->
    <script is:inline>
      const input = document.getElementById('inputValue');
      const output = document.getElementById('outputValue');
      const resultDisplay = document.getElementById('resultDisplay');
      const switchBtn = document.getElementById('switchBtn');
      const ingredientSelect = document.getElementById('ingredient');
      const inputLabel = document.getElementById('inputLabel');
      const outputLabel = document.getElementById('outputLabel');
      const modeLabel = document.getElementById('modeLabel');

      const recipeDisplay = document.getElementById('recipeDisplay');
      const recipeTitle = document.getElementById('recipeTitle');
      const recipeList = document.getElementById('recipeList');

      const ingredientRatios = [
        { name: 'Butter', ratio: 0.071 },
        { name: 'Sugar (granulated)', ratio: 0.08 },
        { name: 'Flour (all-purpose)', ratio: 0.063 },
        { name: 'Honey', ratio: 0.071 },
      ];

      let currentRatio = ingredientRatios[0].ratio;
      let mode = 'gramsToTablespoons';

      const convert = () => {
        const val = parseFloat(input.value);
        if (isNaN(val)) {
          output.value = '';
          resultDisplay.textContent = '—';
          return;
        }
        let result = mode === 'gramsToTablespoons' ? val * currentRatio : val / currentRatio;
        const fromUnit = mode === 'gramsToTablespoons' ? 'g' : 'tbsp';
        const toUnit = mode === 'gramsToTablespoons' ? 'tbsp' : 'g';
        output.value = result.toFixed(4);
        resultDisplay.textContent = `${val} ${fromUnit} = ${result.toFixed(4)} ${toUnit}`;
      };

      input.addEventListener('input', convert);

      switchBtn.addEventListener('click', () => {
        mode = mode === 'gramsToTablespoons' ? 'tablespoonsToGrams' : 'gramsToTablespoons';
        inputLabel.textContent = mode === 'gramsToTablespoons' ? 'Grams' : 'Tablespoons';
        outputLabel.textContent = mode === 'gramsToTablespoons' ? 'Tablespoons' : 'Grams';
        modeLabel.textContent = mode === 'gramsToTablespoons' ? 'Convert Grams to Tablespoons' : 'Convert Tablespoons to Grams';
        input.value = '';
        output.value = '';
        resultDisplay.textContent = '—';
      });

      ingredientSelect.addEventListener('change', (e) => {
        const idx = parseInt(e.target.value);
        currentRatio = ingredientRatios[idx].ratio;
        convert();
      });

      function showRecipe(name) {
        const recipes = {
          "Butter cookies": ["1 cup butter", "1/2 cup sugar", "2 cups flour", "1 tsp vanilla"],
          "Honey glaze": ["1/4 cup honey", "2 tbsp butter", "1/2 tsp cinnamon"],
          "Pancake flour mix": ["1 cup flour", "1 tbsp sugar", "2 tsp baking powder", "1 egg", "3/4 cup milk", "1 tbsp butter"],
          "Add your smackerel": ["Your custom recipe starts here…"]
        };
        const items = recipes[name] || ["Recipe not found."];
        recipeTitle.textContent = name;
        recipeList.innerHTML = items.map(item => `<li>${item}</li>`).join('');
        recipeDisplay.classList.remove('hidden');
        recipeDisplay.scrollIntoView({ behavior: 'smooth' });
      }
    </script>
