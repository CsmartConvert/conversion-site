---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';

let result = '';
if (Astro.request.method === 'POST') {
  const contentType = Astro.request.headers.get('content-type') || '';
  if (
    contentType.includes('application/x-www-form-urlencoded') ||
    contentType.includes('multipart/form-data')
  ) {
    const data = await Astro.request.formData();
    const unitPrice = parseFloat(data.get('unitPrice')) || 0;
    const bulkPrice = parseFloat(data.get('bulkPrice')) || 0;
    const bulkQuantity = parseFloat(data.get('bulkQuantity')) || 1;

    const perUnitBulk = bulkPrice / bulkQuantity;

    if (perUnitBulk < unitPrice) {
      result = `‚úÖ Bulk is cheaper by $${(unitPrice - perUnitBulk).toFixed(2)} per unit.`;
    } else if (perUnitBulk > unitPrice) {
      result = `‚ö†Ô∏è Unit price is cheaper by $${(perUnitBulk - unitPrice).toFixed(2)} per unit.`;
    } else {
      result = `‚ûñ Both options cost the same per unit.`;
    }
  }
}
---

<Layout>
  <!-- üü¶ Header -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-6 px-4 md:py-8 mb-8 shadow text-center rounded-md max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold mb-2">üì¶ Unit Price vs Bulk Price</h1>
    <p class="text-base">Compare a single item‚Äôs price against a bulk option to find the best deal per unit.</p>
  </section>

  <!-- üí° Tip -->
  <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6 max-w-3xl mx-auto">
    <p class="text-blue-700">
      <strong>üí° Tip:</strong> Use this when comparing bulk deals at warehouse stores vs. standard prices at supermarkets.
    </p>
  </div>

  <!-- üßÆ Calculator -->
  <section class="bg-white border border-gray-200 p-6 rounded-lg shadow max-w-2xl mx-auto mb-10">
    <form method="POST" enctype="application/x-www-form-urlencoded" class="space-y-6">
      <div>
        <label for="unitPrice" class="block font-medium text-gray-800">Unit Price ($):</label>
        <input type="number" step="any" name="unitPrice" id="unitPrice" class="w-full p-2 border rounded" required />
      </div>

      <div>
        <label for="bulkPrice" class="block font-medium text-gray-800">Bulk Price ($):</label>
        <input type="number" step="any" name="bulkPrice" id="bulkPrice" class="w-full p-2 border rounded" required />
      </div>

      <div>
        <label for="bulkQuantity" class="block font-medium text-gray-800">Bulk Quantity (units):</label>
        <input type="number" step="any" name="bulkQuantity" id="bulkQuantity" class="w-full p-2 border rounded" required />
      </div>

      <button type="submit" class="bg-blue-700 hover:bg-blue-800 text-white py-2 px-4 rounded font-semibold w-full">
        Compare
      </button>
    </form>

    {result && (
      <div class="mt-6 bg-green-50 border border-green-300 text-green-800 font-semibold p-4 rounded text-center">
        {result}
      </div>
    )}
  </section>

  <!-- üìò Why This Matters + Pro Tips -->
  <section class="max-w-3xl mx-auto px-6 mt-6 mb-8">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Why This Matters</h2>
    <p class="text-gray-700 mb-4">
      Bulk purchases can offer great savings ‚Äî but not always. This calculator ensures you make informed choices before buying in bulk.
    </p>

    <h3 class="text-lg font-semibold mb-2 text-gray-800">Pro Tips</h3>
    <ul class="list-disc list-inside text-gray-700 space-y-1">
      <li>Factor in spoilage if you won‚Äôt use the bulk item fast enough.</li>
      <li>Compare per-unit cost rather than total cost.</li>
      <li>Use this at wholesale clubs, grocery sales, or online marketplaces.</li>
    </ul>
  </section>
</Layout>
