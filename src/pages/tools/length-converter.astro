---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <section class="max-w-xl mx-auto mt-10 p-6 bg-white shadow rounded-lg">
    <h1 class="text-2xl font-bold mb-4">Length Converter</h1>
    <p class="text-gray-600 mb-6">
      Instantly convert between inches and centimeters with this simple tool.
    </p>

    <form class="space-y-4">
      <div>
        <label class="block font-medium text-gray-700">Enter Length:</label>
        <input id="lengthInput" type="number" step="0.01" class="w-full border rounded p-2" required />
      </div>

      <div>
        <label class="block font-medium text-gray-700">Convert From:</label>
        <select id="lengthScale" class="w-full border rounded p-2">
          <option value="in">Inches</option>
          <option value="cm">Centimeters</option>
        </select>
      </div>

      <button type="button" onclick="convertLength()" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
        Convert
      </button>
    </form>

    <div id="lengthResult" class="mt-6 text-lg font-semibold text-green-700 hidden"></div>
  </section>

  <script is:inline>
    function convertLength() {
      const value = parseFloat(document.getElementById("lengthInput").value);
      const scale = document.getElementById("lengthScale").value;
      const resultDiv = document.getElementById("lengthResult");

      if (isNaN(value)) {
        resultDiv.innerText = "Please enter a valid number.";
        resultDiv.classList.remove("hidden");
        return;
      }

      let result = 0;
      let label = "";

      if (scale === "in") {
        result = value * 2.54;
        label = `${value} inches is ${result.toFixed(2)} cm`;
      } else {
        result = value / 2.54;
        label = `${value} cm is ${result.toFixed(2)} inches`;
      }

      resultDiv.innerText = label;
      resultDiv.classList.remove("hidden");
    }
  </script>
</Layout>
