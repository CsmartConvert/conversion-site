---
import Layout from '../../layouts/Layout.astro';

const title = "Kilowatt to Watt Converter";

let kilowatts = "";
let result = null;

if (
  Astro.request?.method === 'POST' &&
  Astro.request.headers.get('content-type')?.includes('application/x-www-form-urlencoded')
) {
  const form = await Astro.request.formData();
  kilowatts = form.get('kilowatts') || "";
  const kW = parseFloat(kilowatts);

  if (!isNaN(kW)) {
    result = kW * 1000;
  }
}
---

<Layout>
  <!-- ðŸ”µ Header -->
  <section class="max-w-3xl mx-auto bg-gradient-to-r from-blue-600 to-blue-800 text-white py-6 px-4 md:py-8 mb-8 shadow text-center rounded-md">
    <h1 class="text-3xl font-bold mb-2">ðŸ”Œ {title}</h1>
    <p class="text-base">Easily convert kilowatts (kW) to watts (W) to better understand power usage.</p>
  </section>

  <!-- ðŸ’¡ Tip -->
  <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6 max-w-3xl mx-auto">
    <p class="text-blue-700"><strong>ðŸ’¡ Tip:</strong> 1 kilowatt = 1000 watts. Use this for appliances, energy bills, or solar systems.</p>
  </div>

  <!-- ðŸ”£ Form -->
  <section class="bg-white border border-gray-200 p-6 rounded-lg shadow max-w-2xl mx-auto mb-10">
    <form method="POST" enctype="application/x-www-form-urlencoded" class="space-y-6">
      <div>
        <label for="kilowatts" class="block font-medium text-gray-800">Kilowatts (kW):</label>
        <input
          type="number"
          step="any"
          name="kilowatts"
          id="kilowatts"
          class="w-full p-2 border rounded"
          value={kilowatts}
          required
        />
      </div>

      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded font-semibold w-full">
        Convert to Watts
      </button>
    </form>

    {result !== null && (
      <div class="mt-6 bg-green-50 border border-green-300 text-green-800 font-semibold p-4 rounded text-center">
        {kilowatts} kW = {result} watts
      </div>
    )}
  </section>

  <!-- ðŸ“˜ Why This Matters + Pro Tips -->
  <section class="max-w-3xl mx-auto px-6 mt-6 mb-8">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">Why This Matters</h2>
    <p class="text-gray-700 mb-4">
      Many devices report power in kilowatts, while household appliances and circuit loads use watts. Understanding both helps with accurate comparisons and safe installations.
    </p>

    <h3 class="text-lg font-semibold mb-2 text-gray-800">Pro Tips</h3>
    <ul class="list-disc list-inside text-gray-700 space-y-1">
      <li>Multiply kW by 1,000 to get W (watts).</li>
      <li>Helpful for comparing appliance energy usage on your electric bill.</li>
      <li>Use in solar setups and generator capacity planning.</li>
    </ul>
  </section>
</Layout>
