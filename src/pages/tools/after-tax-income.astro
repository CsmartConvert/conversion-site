---
import Layout from '../../layouts/Layout.astro';

const title = "After-Tax Income Calculator";

let income = "";
let taxRate = "";
let afterTaxIncome = null;

// âœ… Proper POST guard for SSR
if (
  Astro.request?.method === 'POST' &&
  Astro.request.headers.get('content-type')?.includes('application/x-www-form-urlencoded')
) {
  const form = await Astro.request.formData();

  income = form.get('income') || "";
  taxRate = form.get('taxRate') || "";

  const incomeNum = parseFloat(income);
  const taxRateNum = parseFloat(taxRate);

  if (!isNaN(incomeNum) && !isNaN(taxRateNum)) {
    const taxAmount = incomeNum * (taxRateNum / 100);
    afterTaxIncome = incomeNum - taxAmount;
  }
}
---

<Layout>
  <!-- ðŸ’¼ Header -->
  <section class="max-w-3xl mx-auto bg-gradient-to-r from-blue-600 to-blue-800 text-white py-6 px-4 md:py-8 mb-8 shadow text-center rounded-md">
    <h1 class="text-3xl font-bold mb-2">ðŸ’¼ {title}</h1>
    <p class="text-base">Estimate your take-home pay after taxes are deducted.</p>
  </section>

  <!-- ðŸ’¡ Tip Box -->
  <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6 max-w-3xl mx-auto">
    <p class="text-blue-700"><strong>ðŸ’¡ Tip:</strong> Use your total gross salary and your combined federal, state, and local tax rate for accuracy.</p>
  </div>

  <!-- ðŸ”¢ Calculator Form -->
  <section class="bg-white border border-gray-200 p-6 rounded-lg shadow max-w-2xl mx-auto mb-10">
    <form method="POST" enctype="application/x-www-form-urlencoded" class="space-y-6">
      <div>
        <label for="income" class="block font-medium text-gray-800">Gross Income ($):</label>
        <input
          type="number"
          step="any"
          name="income"
          id="income"
          class="w-full p-2 border rounded"
          value={income}
          required
        />
      </div>

      <div>
        <label for="taxRate" class="block font-medium text-gray-800">Estimated Tax Rate (%):</label>
        <input
          type="number"
          step="any"
          name="taxRate"
          id="taxRate"
          class="w-full p-2 border rounded"
          value={taxRate}
          required
        />
      </div>

      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded font-semibold w-full">
        Calculate After-Tax Income
      </button>
    </form>

    {afterTaxIncome !== null && (
      <div class="mt-6 bg-green-50 border border-green-300 text-green-800 font-semibold p-4 rounded text-center">
        After-Tax Income: ${afterTaxIncome.toFixed(2)}
      </div>
    )}
    <main class="max-w-7xl mx-auto px-4 py-10 grid grid-cols-1 lg:grid-cols-[2fr_1fr] gap-8">
    <!-- LEFT COLUMN: Loan Modules -->
    <div class="space-y-16">
      <section class="mb-10">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {pageTitle}
        </h1>
        <p class="text-gray-700 dark:text-gray-300 text-lg mb-4">
          {pageDesc}
        </p>
      </section>

      <!-- All Four Modules -->
      <LoanModule type="amortized" client:load />
      <LoanModule type="interest-only" client:load />
      <LoanModule type="deferred" client:load />
      <LoanModule type="balloon" client:load />
    </div>

    <!-- RIGHT SIDEBAR -->
    <aside class="sticky top-8 h-fit space-y-6">
      <!-- AD BLOCK -->
      <div class="border border-gray-300 bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 text-center">
        <p class="font-semibold text-gray-800 dark:text-white">Advertisement</p>
        <div class="h-32 flex items-center justify-center bg-gray-100 dark:bg-gray-700 mt-2 rounded">
          <span class="text-gray-400 text-sm">Your Ad Here</span>
        </div>
      </div>

      <!-- RELATED TOOLS -->
      <div class="border border-gray-300 bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-white mb-2">Related Tools</h2>
        <ul class="list-disc list-inside text-sm text-gray-700 dark:text-gray-300 space-y-1">
          <li><a href="/tools/finance/mortgage-payment-calculator" class="underline text-blue-600 dark:text-blue-400">Mortgage Calculator</a></li>
          <li><a href="/tools/finance/rent-vs-buy-calculator" class="underline text-blue-600 dark:text-blue-400">Rent vs Buy</a></li>
          <li><a href="/tools/finance/roi-on-gym-membership" class="underline text-blue-600 dark:text-blue-400">Gym ROI</a></li>
          <li><a href="/tools/finance/student-loan-payoff" class="underline text-blue-600 dark:text-blue-400">Student Loan Payoff</a></li>
        </ul>
      </div>
    </aside>
  </main>

</Layout>




