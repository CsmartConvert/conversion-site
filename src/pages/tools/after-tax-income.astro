---
import Layout from '../../layouts/Layout.astro';

const title = "After-Tax Income Calculator";

let income = "";
let taxRate = "";
let afterTaxIncome = null;

// âœ… Proper POST guard for SSR
if (
  Astro.request?.method === 'POST' &&
  Astro.request.headers.get('content-type')?.includes('application/x-www-form-urlencoded')
) {
  const form = await Astro.request.formData();

  income = form.get('income') || "";
  taxRate = form.get('taxRate') || "";

  const incomeNum = parseFloat(income);
  const taxRateNum = parseFloat(taxRate);

  if (!isNaN(incomeNum) && !isNaN(taxRateNum)) {
    const taxAmount = incomeNum * (taxRateNum / 100);
    afterTaxIncome = incomeNum - taxAmount;
  }
}
---

