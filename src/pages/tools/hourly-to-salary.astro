---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';

let result = null;

if (Astro.request.method === 'POST') {
  const contentType = Astro.request.headers.get('content-type') || '';
  if (
    contentType.includes('application/x-www-form-urlencoded') ||
    contentType.includes('multipart/form-data')
  ) {
    const data = await Astro.request.formData();
    const hourly = parseFloat(data.get('hourly')) || 0;
    const hoursPerWeek = parseFloat(data.get('hoursPerWeek')) || 40;
    const weeksPerYear = parseFloat(data.get('weeksPerYear')) || 52;
    result = hourly * hoursPerWeek * weeksPerYear;
  }
}
---

<Layout>
  <main class="max-w-4xl mx-auto px-4 py-10">
    <!-- ðŸŸ£ Header -->
    <section class="bg-gradient-to-r from-purple-600 to-purple-800 text-white p-6 rounded-t-lg shadow-md">
      <h1 class="text-3xl font-bold">Hourly to Salary Calculator</h1>
      <p class="text-sm mt-1">Convert your hourly wage into an estimated yearly salary.</p>
    </section>

    <!-- ðŸ’¡ Tip -->
    <div class="bg-purple-50 border-l-4 border-purple-400 p-4 mb-6">
      <p class="text-purple-700">
        <strong>ðŸ’¡ Tip:</strong> Use this to estimate your annual income when comparing job offers or planning finances.
      </p>
    </div>

    <!-- ðŸ§® Calculator Form -->
    <section class="bg-white border border-gray-200 p-6 rounded-b-lg shadow space-y-6">
      <form method="POST" enctype="application/x-www-form-urlencoded" class="grid gap-6">
        <div>
          <label for="hourly" class="block font-semibold mb-1">Hourly Wage ($):</label>
          <input type="number" step="any" name="hourly" id="hourly" class="w-full p-2 border rounded" required />
        </div>

        <div>
          <label for="hoursPerWeek" class="block font-semibold mb-1">Hours Worked Per Week:</label>
          <input type="number" step="any" name="hoursPerWeek" id="hoursPerWeek" class="w-full p-2 border rounded" required value="40" />
        </div>

        <div>
          <label for="weeksPerYear" class="block font-semibold mb-1">Weeks Worked Per Year:</label>
          <input type="number" step="any" name="weeksPerYear" id="weeksPerYear" class="w-full p-2 border rounded" required value="52" />
        </div>

        <button type="submit" class="bg-purple-700 hover:bg-purple-800 text-white py-2 px-4 rounded font-semibold">
          Calculate
        </button>
      </form>

      {result !== null && (
        <div class="mt-6 bg-green-50 border border-green-300 text-green-800 font-semibold p-4 rounded">
          ðŸ’¼ Estimated Annual Salary: ${result.toFixed(2)}
        </div>
      )}
    </section>

    <!-- ðŸ“˜ Why This Matters + Pro Tips -->
    <section class="mt-10 px-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-800">Why This Matters</h2>
      <p class="text-gray-700 mb-4">
        Understanding how your hourly wage translates to a full-year salary helps you compare offers, negotiate pay, and manage your budget more effectively.
      </p>

      <h3 class="text-lg font-semibold mb-2 text-gray-800">Pro Tips</h3>
      <ul class="list-disc list-inside text-gray-700 space-y-1">
        <li>Use 40 hours/week and 52 weeks/year for a full-time estimate.</li>
        <li>Adjust the weeks/year for unpaid time off or freelance work schedules.</li>
        <li>Compare this estimate with benefits and taxes when evaluating job offers.</li>
      </ul>
    </section>
  </main>
</Layout>






