---
// src/pages/contact.astro
import SiteLayout from '../layouts/SiteLayout.astro';

const title = "Contact Us";
---

<SiteLayout title={title}>
  <main class="max-w-4xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Contact Us</h1>

    <p class="text-gray-700 dark:text-gray-300 mb-6">
      Have a suggestion, question, or feedback? We'd love to hear from you.
    </p>

    <form class="space-y-6" netlify method="POST" name="contact">
      <input type="hidden" name="form-name" value="contact" />

      <div>
        <label for="name" class="block mb-1 font-medium text-gray-800 dark:text-gray-200">Your Name</label>
        <input type="text" id="name" name="name" required class="w-full border px-4 py-2 rounded shadow-sm dark:bg-gray-800 dark:text-white" />
      </div>

      <div>
        <label for="email" class="block mb-1 font-medium text-gray-800 dark:text-gray-200">Email Address</label>
        <input type="email" id="email" name="email" required class="w-full border px-4 py-2 rounded shadow-sm dark:bg-gray-800 dark:text-white" />
      </div>

      <div>
        <label for="message" class="block mb-1 font-medium text-gray-800 dark:text-gray-200">Message</label>
        <textarea id="message" name="message" rows="6" required class="w-full border px-4 py-2 rounded shadow-sm dark:bg-gray-800 dark:text-white"></textarea>
      </div>

      <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">
        Send Message
      </button>
    </form>
  </main>
</SiteLayout>


