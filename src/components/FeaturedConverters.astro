---
import tools from '../data/conversion-tools.json';
const featuredTools = tools.filter(tool => tool.featured);
---

<section class="mt-12">
  <h2 class="text-2xl font-bold text-purple-800 mb-4">ðŸŒŸ Featured Converters</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    {featuredTools.map(tool => (
      <a href={`/tools/${tool.slug}`} class="block bg-purple-50 hover:bg-purple-100 border border-purple-200 rounded-lg p-6 shadow-sm transition duration-200">
        <div class="text-3xl mb-2">{tool.emoji}</div>
        <h3 class="text-lg font-semibold text-purple-900">{tool.name}</h3>
        <p class="text-sm text-purple-700">{tool.category}</p>
      </a>
    ))}
  </div>
</section>
