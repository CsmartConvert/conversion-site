---
// GlobalHeader.astro
---

<header class="bg-white shadow-md sticky top-0 z-50 dark:bg-gray-800 dark:text-white">
  <div class="max-w-7xl mx-auto px-4 py-4 flex flex-col md:flex-row items-center justify-between">
    <!-- Logo / Brand -->
    <a href="/" class="text-2xl font-bold text-blue-700 hover:text-blue-900 dark:text-blue-300 dark:hover:text-blue-100">
      Easy Converter
    </a>

    <!-- Navigation Links -->
    <nav class="mt-3 md:mt-0 flex space-x-4 text-sm font-medium text-gray-700 dark:text-gray-200">
      <a href="/tools/finance" class="hover:text-blue-600 dark:hover:text-blue-400">Finance</a>
      <a href="/tools/cooking" class="hover:text-blue-600 dark:hover:text-blue-400">Cooking</a>
      <a href="/tools/travel" class="hover:text-blue-600 dark:hover:text-blue-400">Travel</a>
      <a href="/tools/household" class="hover:text-blue-600 dark:hover:text-blue-400">Household</a>
    </nav>

    <!-- Search Field -->
    <form action="/search" method="GET" class="mt-3 md:mt-0">
      <input
        type="text"
        name="q"
        placeholder="Search converters..."
        class="border px-3 py-1 rounded-md text-sm w-48 md:w-60 focus:outline-none focus:ring-2 focus:ring-blue-400 dark:bg-gray-700 dark:text-white dark:border-gray-600"
      />
    </form>
  </div>
</header>

