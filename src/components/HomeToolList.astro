---
import tools from '../data/conversion-tools.json';

const categories = [...new Set(tools.map(tool => tool.category))];
---

{categories.map(category => (
  <section class="mb-10">
    <h2 class="text-2xl font-semibold mt-8 mb-2">{category}</h2>
    <div class="flex flex-wrap gap-2">
      {tools
        .filter(tool => tool.category === category)
        .map(tool => (
          <a 
            href={`/tools/${tool.slug}`} 
            class="inline-block bg-white border border-gray-300 px-4 py-2 rounded shadow hover:bg-blue-100 text-blue-700 text-sm font-medium"
          >
            {tool.title}
          </a>
        ))}
    </div>
  </section>
))}

